{
    "name": "angular-component-library",
    "version": "1.0.3",
    "scripts": {
        "ng": "ng",
        "start": "ng serve",
        "build": "ng build",
        "build:prod": "ng build --configuration production",
        "build:lib": "ng build angular-component-library --configuration production",
        "build:lib-watch": "ng build angular-component-library --configuration production --watch",
        "pack:lib": "cd dist/angular-component-library && npm pack",
        "link:lib": "cd dist/angular-component-library && npm link",
        "test": "ng test",
        "prettier": "npx prettier --write .",
        "storybook": "ng run angular-component-library:storybook",
        "start-storybook": "start-storybook -p 6006",
        "test-storybook": "test-storybook --config-dir projects/angular-component-library/.storybook --url http://localhost:6006",
        "build-storybook": "ng run angular-component-library:build-storybook",
        "update:devkit": "ng update @angular-devkit/build-angular",
        "update:angular": "ng update @angular/cli @angular/core",
        "update:angular/cdk": "ng update @angular/cdk @ngx-translate/core",
        "update:fortawesome": "ng update @fortawesome/angular-fontawesome @fortawesome/fontawesome-svg-core @fortawesome/free-brands-svg-icons @fortawesome/free-regular-svg-icons @fortawesome/free-solid-svg-icons",
        "update:util": "ng update date-fns @types/lodash.clonedeep lodash.clonedeep rxjs tslib",
        "update:karma": "ng update karma karma-chrome-launcher karma-coverage karma-jasmine karma-jasmine-html-reporter"
    },
    "private": true,
    "dependencies": {
        "@angular/animations": "^18.2.11",
        "@angular/cdk": "^18.2.12",
        "@angular/common": "^18.2.11",
        "@angular/compiler": "^18.2.11",
        "@angular/core": "^18.2.11",
        "@angular/forms": "^18.2.11",
        "@angular/platform-browser": "^18.2.11",
        "@angular/platform-browser-dynamic": "^18.2.11",
        "@angular/router": "^18.2.11",
        "@fortawesome/angular-fontawesome": "^0.15.0",
        "@fortawesome/fontawesome-svg-core": "^6.6.0",
        "@fortawesome/free-brands-svg-icons": "^6.6.0",
        "@fortawesome/free-regular-svg-icons": "^6.6.0",
        "@fortawesome/free-solid-svg-icons": "^6.6.0",
        "@ngx-translate/core": "^16.0.3",
        "@storybook/addon-a11y": "^8.6.12",
        "@types/lodash.clonedeep": "^4.5.9",
        "@types/luxon": "^3.6.2",
        "date-fns": "^4.1.0",
        "lodash.clonedeep": "^4.5.0",
        "luxon": "^3.6.1",
        "rxjs": "~7.8.0",
        "tslib": "^2.8.1",
        "zone.js": "~0.14.10"
    },
    "devDependencies": {
        "@angular-devkit/build-angular": "^18.2.11",
        "@angular/cli": "^18.1.1",
        "@angular/compiler-cli": "^18.2.11",
        "@compodoc/compodoc": "^1.1.26",
        "@storybook/addon-docs": "^8.6.12",
        "@storybook/addon-essentials": "^8.6.12",
        "@storybook/addon-interactions": "^8.6.12",
        "@storybook/addon-onboarding": "^8.6.12",
        "@storybook/angular": "^8.6.12",
        "@storybook/blocks": "^8.6.12",
        "@storybook/test": "^8.6.12",
        "@storybook/test-runner": "^0.22.0",
        "@types/jasmine": "~5.1.0",
        "@types/webpack": "^5.28.5",
        "jasmine-core": "~5.1.0",
        "karma": "~6.4.3",
        "karma-chrome-launcher": "~3.2.0",
        "karma-coverage": "~2.2.0",
        "karma-jasmine": "~5.1.0",
        "karma-jasmine-html-reporter": "~2.1.0",
        "ng-packagr": "^18.2.1",
        "prettier": "^3.5.3",
        "storybook": "^8.6.12",
        "storybook-design-token": "^3.2.0",
        "typescript": "~5.5.4"
    },
    "overrides": {
        "react": "18.2.0",
        "react-dom": "18.2.0"
    }
}
